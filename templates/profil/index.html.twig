{% extends 'base.html.twig' %}

{% block body %}
   <h1>Les profils des pro's</h1>

    <div class="search-bar">
        <form class="search-form" action="{{ path('profils') }}" method="GET">
            <img class="img_search" src="../upload/img/search.png" alt="Rechercher" type="submit">
            <input class="search-input" type="text" placeholder="Recherche" name="q">
            <button class="sort-btn" type="button">DISPONIBILITES</button>
            <button class="sort-btn" type="button">SPECIALITE</button>
            <button class="sort-btn" type="button">LOCALISATION</button>
        </form>
    </div>

    <div class="profile-gallery">
        {% for profil in profils %}
            <div class="profile-card">
               {# <img src="{{ profil.photo }}" alt="Photo de profil"> #}
                <h2>{{ profil.last_name }} {{ profil.first_name }}</h2>
                <p>Localisation: {{ profil.city }}</p>
                <p>J'aime: {#{{ profil.nbJaime }}#}</p>
                <p>Impressions: {#{{ profil.nbImpressions }}#}</p>
                <p>Abonn√©s: {#{{ profil.nbAbonnes }}#}</p>
            </div>
        {% endfor %}
    </div>
{% endblock %}
